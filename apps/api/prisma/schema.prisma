// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                @id @default(autoincrement())
  email              String             @unique
  password           String
  name               String
  birthdate          DateTime           @db.Date
  referralCode       String?            @db.Char(8)
  referredBy         Int?               @default(0)
  role               String             @default("customer")
  createdAt          DateTime           @default(now())
  updatedAt          DateTime?          @updatedAt
  event_transactions EventTransaction[]
  log_userpoints     LogUserPoint[]
  log_userlogins     LogUserlogin[]

  @@map("users")
}

model LogUserPoint {
  id        Int      @id @default(autoincrement())
  userId    Int
  points    Float    @default(0)
  discount  Float    @default(0)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@map("log_userpoints")
}

model LogUserlogin {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @db.VarChar(255)
  createdAt DateTime @default(now())
  User      User     @relation(fields: [userId], references: [id])

  @@map("log_userlogins")
}

model Event {
  id               Int                @id @default(autoincrement())
  name             String
  eventtype        String             @default("free")
  eventtime        DateTime
  description      String
  price            Float
  location         String
  seats            Int
  createdAt        DateTime           @default(now())
  updatedAt        DateTime?          @updatedAt
  EventTransaction EventTransaction[]

  @@map("events")
}

model EventTransaction {
  id          Int       @id @default(autoincrement())
  userId      Int
  eventId     Int
  discount    Float
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
  Event       Event     @relation(fields: [eventId], references: [id])
  User        User      @relation(fields: [userId], references: [id])

  @@map("event_transactions")
}
